<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.backbase.mobiletest.ui.citymap.view.CityListActivity">

    <LinearLayout
        android:orientation="vertical"
        android:name="com.backbase.mobiletest.ItemListFragment"
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:padding="10dp"
            android:background="#ccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:queryHint="Query"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.SearchView>
        </RelativeLayout>



        <android.support.v7.widget.RecyclerView
            android:background="@drawable/rounded_corner"
            android:id="@+id/list_city"
            android:name="com.backbase.mobiletest.ItemListFragment"
            android:layout_width="@dimen/item_width"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.backbase.mobiletest.ui.citymap.CityListActivity"
            tools:listitem="@layout/city_list_content" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>